<%= form_for([@location, @location.posts.build], :html => {:class => 'form'}, validate: true) do |f| %>

    <h2>Talk about <%= @location.name %>!</h2>
    <p class="text-muted">Tell other travelers about your favorite places and off-the-beaten-path adventures. </p>
    <hr>

    <p class="form-group">
      <%= f.text_field :title, placeholder: "Enter a destination." %>
    </p>
    <p class="form-group">
      <%= f.text_area :body, placeholder: "What's special about it?" %>
    </p>
    <p class="form-group">
      <%= f.submit %>
    </p>
<% end %>
