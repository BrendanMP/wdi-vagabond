<section class="edit">
  <%= form_for([@location, @post] , :html => { :class =>'form' }) do |f|  %>
      <p>
        <label for="">Destination</label>
        <%= f.text_field :title %>
      </p>
      <p>
        <label for="">What's special about it?</label>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit %>
      </p>
  <% end %>
</section>

